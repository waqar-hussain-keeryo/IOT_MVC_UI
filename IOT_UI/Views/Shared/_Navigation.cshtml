<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Retrieve the stored email and role
        var email = localStorage.getItem("email");
        var role = localStorage.getItem("role");

        // Update the header with user email and role
        if (email) {
            document.getElementById('userEmail').textContent = email;
            document.getElementById('userName').textContent = email;
        }
        if (role) {
            document.getElementById('userRole').textContent = role;

            // Show/hide menu items based on role
            var adminItems = document.querySelectorAll('.');
            var customerItems = document.querySelectorAll('.customer-role');

            if (role === 'Admin') {
                adminItems.forEach(item => item.style.display = 'block');
                customerItems.forEach(item => item.style.display = 'block');
            } else if (role === 'Customer') {
                adminItems.forEach(item => item.style.display = 'none');
                customerItems.forEach(item => item.style.display = 'block');
            } else {
                adminItems.forEach(item => item.style.display = 'none');
                customerItems.forEach(item => item.style.display = 'none');
            }
        }
    });
</script>

