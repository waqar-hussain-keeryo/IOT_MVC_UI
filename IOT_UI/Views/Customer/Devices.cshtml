<!-- Include Partial View -->
@Html.Partial("_navigation")

<main role="main" id="main" class="main">
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>Devices</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Devices</a></li>
                <li class="breadcrumb-item active">Add Device</li>
            </ol>
        </nav>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDevice">
            Add Device
        </button>
    </div>

    <!-- Page Section -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Table with stripped rows -->
                        <table class="table table-bordered" id="tbl_Device"></table>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Add Device Partial View -->
    @Html.Partial("_AddDevice")

    <!-- Update Device Partial View -->
    @Html.Partial("_UpdateDevice")

    <script src="~/connectivity/Device.js"></script>
</main>
