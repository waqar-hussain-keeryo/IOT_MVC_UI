<div class="modal fade" id="addSite" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Add Site</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Site Name" id="txt_name">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Site Location" id="txt_location">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Latitude" id="txt_latitude">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Longitude" id="txt_longitude">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" onclick="btnAddSite()">Add</button>
            </div>
        </div>
    </div>
</div>